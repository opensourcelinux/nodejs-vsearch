<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <link rel="stylesheet" href="admin.css">

  <title>Admin Pannel</title>
</head>

<body>
  <a href="/" class="btn btn-primary btn-large m-lg-2">Back</a>
  <div class="container mt-lg-2">
    <div class="container">
      <h2>Admin Pannel</h2>
    </div>

    <table class="table align-middle mb-0 bg-white">
      <thead class="bg-light">
        <tr>
          <th>id</th>
          <th></th>
          <th>Name</th>
          <th>Company Name</th>
          <th>Service</th>
          <th>City</th>
          <th>Price Range</th>
          <th>Delete</th>
          <th>Edit</th>
        </tr>
      </thead>
      <tbody>
        {{#each latest}}
        <tr>
          <td>
            <p>{{this.id}}</p>
          </td>
          <td>
            <div class="d-flex align-items-center">
              <img src="{{this.imageurl}}" alt="" style="width: 45px; height: 45px"
                class="rounded-circle" />
            </div>
          </td>
          <td>
            <p class="fw-normal mb-1">{{this.name}}</p>
            <p class="text-muted mb-0">{{this.companyname}}</p>
          </td>
          <td>{{this.companyname}}</td>
          <td>
            <p>{{this.services}}</p>
          </td>
          <td>
            <p>{{this.city}}</p>
          </td>
          <td>
            <h4>RS. {{this.pricerange}}</h4>
          </td>
          <td>
            <a href="/delete/{{this.id}}" class="btn btn-danger">Delete</a>
          </td>
          <td>
            <a href="/edit/{{this.id}}" class="btn btn-success">Edit</a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  <!-- Optional JavaScript; choose one of the two! -->

  <!-- Option 1: Bootstrap Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
    crossorigin="anonymous"></script>

  <!-- Option 2: Separate Popper and Bootstrap JS -->
